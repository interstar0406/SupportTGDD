extends _layout/layout

block variables
	- var title = 'Trả góp'
	- var description = 'Description for home page'
	- var bodyclass = 'home'

block body
	//- //- .owl-carousel
	//- //- 	span ahscbabcabciaícnháibci
	//- //- 	span ahscbabcabciaícnháibci
